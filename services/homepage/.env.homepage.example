# Homepage environment variables
# Copy to .env.homepage and customize

# Web UI port (external port mapped to container)
HOMEPAGE_WEB_PORT=3002

# Subdomain for Traefik (default: home)
# Service will be accessible at: home.${BASE_DOMAIN}
HOMEPAGE_SUBDOMAIN=home

# Required: Allowed hosts for the dashboard (comma-separated)
# Include your Traefik subdomain for reverse proxy access
HOMEPAGE_ALLOWED_HOSTS=localhost:3002,home.home.example.com
